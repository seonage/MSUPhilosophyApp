<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Philosophy_Religion">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:id="@+id/TopSection"
        android:layout_height="wrap_content">

    <TextView android:text="@string/app_version"
        android:id="@+id/app_version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:id="@+id/MiddleSection"
        android:layout_centerInParent="true"
        android:layout_margin="40dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="55dp"
            android:orientation="horizontal">

            <Button
                android:drawableTop="@drawable/news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="News\nEvents"
                android:id="@+id/b_news_events"
                android:background="#ffffffff" />

            <Button
                android:drawableTop="@drawable/faculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Faculty"
                android:id="@+id/b_faculty"
                android:background="#ffffffff" />

            <Button
                android:drawableTop="@drawable/major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Major"
                android:id="@+id/b_major"
                android:background="#ffffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="55dp"
            android:orientation="horizontal">

            <Button
                android:drawableTop="@drawable/minor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Minor"
                android:id="@+id/b_minor"
                android:background="#ffffffff" />

            <Button
                android:drawableTop="@drawable/graduates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Graduates"
                android:id="@+id/b_graduates"
                android:background="#ffffffff" />

            <Button
                android:drawableTop="@drawable/prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Benfield\n Prize"
                android:id="@+id/b_benfield_prize"
                android:background="#ffffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="55dp"
            android:orientation="horizontal">

            <Button
                android:drawableTop="@drawable/map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Map"
                android:id="@+id/b_map"
                android:background="#ffffffff" />

            <Button
                android:drawableTop="@drawable/courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Courses"
                android:id="@+id/b_courses"
                android:background="#ffffffff" />

            <Button
                android:drawableTop="@drawable/msu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MSU\n Home"
                android:id="@+id/b_msu_home"
                android:background="#ffffffff" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/BottomSection"
        android:layout_alignParentBottom="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/msu_3in"
                android:id="@+id/msu_logo" />
        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>
</ScrollView>
